<h2 class="page-header"> {{pageHeader}}</h2>

<form {{#if deal}} method="post" action="/deals/editDeals/{{deal._id}}"
{{else}}
 method="post" action="/deals/addDeal"
{{/if}}>


    <div class="form-group">
        <label>Deal Name</label>
        <input type="text" class="form-control" {{#if deal}}value="{{deal.dealname}}"{{/if}} name="deal_name" placeholder="Deal Name">
    </div>
    <div class="form-group">
        <label>Deal Type</label>
        {{!--
        <input type="text" class="form-control" name="deal_type" placeholder="Deal Type"> --}}
        <select name="deal_type" class="form-control">
           {{#each dealtype}}
           <option value="{{this}}" {{select ../deal.dealtype  this }}>{{this}}</option>
           {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label>Restaurant Name</label>
        <select name="restaurant" class="form-control">
          
            {{#each rests}}
            <option value="{{_id}}" {{select ../deal.restaurantid  _id }}>{{restaurantname}}</option>
            {{/each}}
           
        </select>
    </div>
    <div class="form-group">
        <label>Discount Offer</label>
        <input type="text" class="form-control"  {{#if deal}}value="{{deal.discountoffer}}"{{/if}} name="discount_offer" placeholder="Discount Offer">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    <button type="reset" class="btn btn-default">Reset</button>
</form>





