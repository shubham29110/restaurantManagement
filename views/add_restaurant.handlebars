 <h2 class="page-header">{{pageHeader}}</h2>


<form {{#if rest}} method="post" action="/restaurants/editRestaurant/{{rest._id}}"
{{else}}
 method="post" action="/restaurants/addRestaurant"
{{/if}}>
  <div class="form-group">
    <label>Restaurant Name</label>
    <input type="text" class="form-control" {{#if rest}}value="{{rest.restaurantname}}"{{/if}} name="rest_name" placeholder="Restaurant Name">
  </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" {{#if rest}}value="{{rest.address}}"{{/if}} name="address" placeholder="Address">
  </div>
   <div class="form-group">
    <label>Owner Name</label>
    <input type="text" class="form-control" {{#if rest}}value="{{rest.ownername}}"{{/if}} name="owner_name" placeholder="Owner Name">
  </div>
   <div class="form-group">
    <label>Contact Number</label>
    <input type="text" class="form-control" {{#if rest}}value="{{rest.contactnumber}}"{{/if}} name="contact_number" placeholder="Contact Number">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
   <button type="reset" class="btn btn-default">Reset</button>
</form>